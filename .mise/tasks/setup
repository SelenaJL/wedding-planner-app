#!/usr/bin/env bash
# mise description="Set up development environment"

set -e

echo "ðŸš€ Setting up wedding planner development environment..."

# Install PostgreSQL via system package manager
if command -v brew >/dev/null 2>&1; then
    echo "ðŸ“¦ Installing PostgreSQL via Homebrew..."
    if ! brew list postgresql@14 >/dev/null 2>&1; then
        brew install postgresql@14
    fi
    brew services start postgresql@14
elif command -v apt >/dev/null 2>&1; then
    echo "ðŸ“¦ Installing PostgreSQL via apt..."
    sudo apt update && sudo apt install -y postgresql postgresql-contrib
    sudo systemctl start postgresql
    sudo systemctl enable postgresql
elif command -v pacman >/dev/null 2>&1; then
    echo "ðŸ“¦ Installing PostgreSQL via pacman..."
    sudo pacman -S postgresql
    sudo systemctl start postgresql
    sudo systemctl enable postgresql
else
    echo "âŒ Unsupported package manager. Please install PostgreSQL manually."
    echo "   - macOS: brew install postgresql@14"
    echo "   - Ubuntu/Debian: sudo apt install postgresql postgresql-contrib"
    echo "   - Arch: sudo pacman -S postgresql"
    exit 1
fi

echo "ðŸ’Ž Installing Ruby gems..."
bundle install

echo "ðŸ—„ï¸ Setting up database..."
bundle exec rails db:create
if [ -f "db/migrate"/*.rb ] 2>/dev/null; then
    bundle exec rails db:migrate
fi

echo "âœ… Setup complete!"
echo ""
echo "Next steps:"
echo "  mise run start    # Start Rails server"
echo "  mise run db:reset # Reset database with seed data"
echo "  mise run test     # Run tests"